<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/tv_instructions_error"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="177dp"
        android:text="Sign Up"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="360dp"
        android:layout_height="249dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="159dp">


        <LinearLayout
            android:layout_width="348dp"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:padding="5dp"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="164dp">


            <EditText
                android:id="@+id/etx_su_firstname"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="#ececec"

                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:paddingRight="15dp" />

            <EditText
                android:id="@+id/etx_su_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ececec"

                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="156dp"
            android:orientation="vertical"
            android:padding="5dp"

            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="240dp">


            <EditText
                android:id="@+id/etx_su_email"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginBottom="5dp"
                android:background="#ececec"
                android:ems="10"

                android:hint="Email Address"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etx_su_password"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="5dp"
                android:background="#ececec"

                android:ems="10"
                android:hint="Password"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etx_su_address"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#ececec"
                android:ems="10"
                android:hint="Address"
                android:inputType="textPersonName" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btn_su_register"
        android:layout_width="326dp"
        android:layout_height="38dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"

        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"

        android:layout_marginTop="16dp"

        android:background="#5da3e1"
        android:onClick="View_SignUp_clickHandler"
        android:text="Create an Account"
        android:textColor="#FFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_su_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/btn_su_login"
        android:layout_width="321dp"
        android:layout_height="35dp"
        android:layout_marginBottom="56dp"

        android:layout_marginEnd="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"

        android:layout_marginStart="23dp"

        android:background="#FFF"
        android:onClick="View_SignUp_clickHandler"
        android:outlineAmbientShadowColor="#5da3e1"
        android:text="Have an account? Sign In"
        android:textColor="#5da3e1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_su_register"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>